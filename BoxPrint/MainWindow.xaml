<Window x:Class="BoxPrint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoxPrint"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:views="clr-namespace:BoxPrint.GUI.Views"
        xmlns:uidictionary="clr-namespace:BoxPrint.GUI.UIControls"
        xmlns:LoginUser="clr-namespace:BoxPrint.GUI.ETC"
        xmlns:ex="clr-namespace:TranslationByMarkupExtension"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        WindowStyle="None"
        Title="Stocker Control System" Height="1800" Width="1950" Background="#FFF3F3F3"  WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" WindowState="Maximized" Icon="Image/SCSIcon.ico"
        Name="StockerControlSystem">
    
    
    <Window.Resources>
        <ResourceDictionary>

            <uidictionary:NegativeVisibleConverter x:Key="NvisibleConverter"/>
            
            <!--툴팁-->
            <Style TargetType="{x:Type ToolTip}" BasedOn="{StaticResource SK_ToolTipStyle}"/>

            <!--자식선택시 부모 색상변경 기능.. 나중에 사용하는부분 변경해서 이기능 지우자-->
            <Style x:Key="PathColorChange" TargetType="Path">
                <Setter Property="Fill" Value="#FF495A69" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Border,AncestorLevel=1}, Path=IsMouseOver}" Value="True" >
                        <Setter Property="Fill" Value="#FFEC685B" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <!--상단 서브 메뉴 스타일 : 동적생성 때문에 여기서 만든다-->
            <Style x:Key="TextSubMenuStyle" TargetType="{x:Type uidictionary:SK_ButtonControl}">
                <Setter Property="Tag" Value="{Binding Path=(uidictionary:SK_ButtonControl.TagName), RelativeSource={RelativeSource self}}"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type uidictionary:SK_ButtonControl}">
                            <Border Background="Transparent" Margin="0" IsHitTestVisible="{Binding Path=(uidictionary:SK_ButtonControl.UserAuthority), RelativeSource={RelativeSource TemplatedParent}}">
                                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="2"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="7"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Path=(uidictionary:SK_ButtonControl.Content), RelativeSource={RelativeSource TemplatedParent}}"
                                           HorizontalAlignment="Center" FontFamily="{StaticResource BoldFont}" FontSize="{TemplateBinding FontSize}"
                                           Background="Transparent" VerticalAlignment="Center" IsHitTestVisible="False">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=(uidictionary:SK_ButtonControl.UserAuthority), RelativeSource={RelativeSource TemplatedParent}}" Value="true">
                                                        <Setter Property="Foreground" Value="White" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=(uidictionary:SK_ButtonControl.UserAuthority), RelativeSource={RelativeSource TemplatedParent}}" Value="false">
                                                        <Setter Property="Foreground" Value="#c5c7cc" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!--230102 YSW 권한 잠김 아이콘-->
                                    <Path Data="M144 144v48H304V144c0-44.2-35.8-80-80-80s-80 35.8-80 80zM80 192V144C80 64.5 144.5 0 224 0s144 64.5 144 144v48h16c35.3 0 64 28.7 64 64V448c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V256c0-35.3 28.7-64 64-64H80z"
                                        x:Name="LockIcon" Visibility="{Binding Path=(uidictionary:SK_ButtonControl.LockIcon), RelativeSource={RelativeSource TemplatedParent}}" Grid.Column="1" Stretch="Uniform" Margin="7,0,-7,0" Fill="#c5c7cc" />
                                    <Rectangle x:Name="rectangleTextLine" IsHitTestVisible="False" Grid.Row="1" Fill="White" HorizontalAlignment="Stretch" RenderTransformOrigin="0.5,0.5">
                                        <Rectangle.RenderTransform>
                                            <ScaleTransform ScaleX="0"/>
                                        </Rectangle.RenderTransform>
                                    </Rectangle>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard >
                                                <DoubleAnimation Storyboard.TargetName="rectangleTextLine" Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" From="0" To="1" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard >
                                                <DoubleAnimation Storyboard.TargetName="rectangleTextLine" Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" From="1" To="0" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--언어 설정 스토리 보드-->
            <!--국기 열기-->
            <Storyboard x:Key="storyboardOpenLanguageChangeMenu">
                <ThicknessAnimation BeginTime="0:0:0:0"   Duration="0:0:0:0.2" Storyboard.TargetProperty="Margin" To="0,0,0,200" Storyboard.TargetName="ellipsoLanguageItem0" AccelerationRatio="0.9" DecelerationRatio="0.1"/>
                <ThicknessAnimation BeginTime="0:0:0:0.2" Duration="0:0:0:0.2" Storyboard.TargetProperty="Margin" To="0,0,0,150" Storyboard.TargetName="ellipsoLanguageItem1" AccelerationRatio="0.9" DecelerationRatio="0.1"/>
                <ThicknessAnimation BeginTime="0:0:0:0.4" Duration="0:0:0:0.2" Storyboard.TargetProperty="Margin" To="0,0,0,100" Storyboard.TargetName="ellipsoLanguageItem2" AccelerationRatio="0.9" DecelerationRatio="0.1"/>
                <ThicknessAnimation BeginTime="0:0:0:0.6" Duration="0:0:0:0.2" Storyboard.TargetProperty="Margin" To="0,0,0,50"  Storyboard.TargetName="ellipsoLanguageItem3" AccelerationRatio="0.9" DecelerationRatio="0.1"/>
            </Storyboard>
            <!--국기 닫기-->
            <Storyboard x:Key="storyboardCloseLanguageChangeMenu">
                <ThicknessAnimation BeginTime="0:0:0:0" Duration="0:0:0:0.15" Storyboard.TargetProperty="Margin" To="0,0,0,0" Storyboard.TargetName="ellipsoLanguageItem0" AccelerationRatio="0.9" DecelerationRatio="0.1"/>
                <ThicknessAnimation BeginTime="0:0:0:0" Duration="0:0:0:0.15" Storyboard.TargetProperty="Margin" To="0,0,0,0" Storyboard.TargetName="ellipsoLanguageItem1" AccelerationRatio="0.9" DecelerationRatio="0.1"/>
                <ThicknessAnimation BeginTime="0:0:0:0" Duration="0:0:0:0.15" Storyboard.TargetProperty="Margin" To="0,0,0,0" Storyboard.TargetName="ellipsoLanguageItem2" AccelerationRatio="0.9" DecelerationRatio="0.1"/>
                <ThicknessAnimation BeginTime="0:0:0:0" Duration="0:0:0:0.15" Storyboard.TargetProperty="Margin" To="0,0,0,0" Storyboard.TargetName="ellipsoLanguageItem3" AccelerationRatio="0.9" DecelerationRatio="0.1"/>
            </Storyboard>

            <!--콤보박스 이미지 아이탬-->
            <DataTemplate x:Key="ImageDataTemplate">
                <WrapPanel Margin="0 5 0 5" Height="25">
                    <Image Width="65" Height="65" Stretch="Fill" Source="{Binding Image}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,15,0"/>
                    <Label Content="{Binding Name}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
                </WrapPanel>
            </DataTemplate>

            <Style x:Key="NavigationTab" TargetType="{x:Type uidictionary:SK_ButtonControl}">
                <Setter Property="Tag" Value="{Binding Path=(uidictionary:SK_ButtonControl.TagName), RelativeSource={RelativeSource self}}"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type uidictionary:SK_ButtonControl}">

                            <Border Background="{TemplateBinding Background}" Margin="0" CornerRadius="0,0,5,5">
                                <Grid MaxWidth="250" MinWidth="150">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>

                                    <!--실행 버튼-->
                                    <Grid x:Name="GridBtn" Background="Transparent" ToolTip="{ex:Translate Switch}" Tag="{TemplateBinding Tag}" MouseDown="NavigationTab_MouseDown">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Path Name="pathIcon" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False" RenderTransformOrigin="0.5,0.5"
                                              Stretch="Uniform" Fill="{Binding Path=(uidictionary:SK_ButtonControl.IconFill), RelativeSource={RelativeSource TemplatedParent}}" 
                                              Margin="{Binding Path=(uidictionary:SK_ButtonControl.ImageMargin), RelativeSource={RelativeSource TemplatedParent}}" 
                                              Data="{Binding Path=(uidictionary:SK_ButtonControl.PathData), RelativeSource={RelativeSource TemplatedParent}}" >
                                            <Path.RenderTransform>
                                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                                            </Path.RenderTransform>
                                        </Path>

                                        <TextBlock Name="textblockText"  Text="{Binding Path=(uidictionary:SK_ButtonControl.DisplayName), RelativeSource={RelativeSource TemplatedParent}}" Grid.Column="1" RenderTransformOrigin="0.5,0.5"
                                                   HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Center" FontFamily="{StaticResource BoldFont}" FontSize="{TemplateBinding FontSize}"                                        
                                                   Background="Transparent" IsHitTestVisible="False" Foreground="{TemplateBinding Foreground}" >
                                            <TextBlock.RenderTransform>
                                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                                            </TextBlock.RenderTransform>
                                        </TextBlock>
                                    </Grid>

                                    <!--삭제 버튼-->
                                    <Grid x:Name="GridDeleteBtn" Grid.Column="2" Background="Transparent" ToolTip="{ex:Translate CLOSE}" Tag="{TemplateBinding Tag}" MouseDown="NavigationTabDelete_MouseDown">
                                        <Path Data="M310.6 361.4c12.5 12.5 12.5 32.75 0 45.25C304.4 412.9 296.2 416 288 416s-16.38-3.125-22.62-9.375L160 301.3L54.63 406.6C48.38 412.9 40.19 416 32 416S15.63 412.9 9.375 406.6c-12.5-12.5-12.5-32.75 0-45.25l105.4-105.4L9.375 150.6c-12.5-12.5-12.5-32.75 0-45.25s32.75-12.5 45.25 0L160 210.8l105.4-105.4c12.5-12.5 32.75-12.5 45.25 0s12.5 32.75 0 45.25l-105.4 105.4L310.6 361.4z"
                                              Name="pathIcon2" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" IsHitTestVisible="False"
                                              Stretch="Uniform" Fill="{Binding Path=(uidictionary:SK_ButtonControl.IconFill), RelativeSource={RelativeSource TemplatedParent}}" 
                                              Margin="11" >
                                            <Path.RenderTransform>
                                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                                            </Path.RenderTransform>
                                        </Path>
                                    </Grid>
                                    <Border x:Name="borderLine" IsHitTestVisible="False" Grid.Column="2" HorizontalAlignment="Right" Height="15" Background="{StaticResource SK_LBlack}" Width="1"/>
                                </Grid>
                            </Border>

                            <ControlTemplate.Triggers>
                                <DataTrigger Binding="{Binding Path=(uidictionary:SK_ButtonControl.IsSelect), RelativeSource={RelativeSource self}}" Value="True">
                                    <Setter Property="Background" Value="{Binding Path=(uidictionary:SK_ButtonControl.SelectColor), RelativeSource={RelativeSource self}}"/>
                                </DataTrigger>

                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter Property="Background" Value="{Binding Path=(uidictionary:SK_ButtonControl.MouseOverColor), RelativeSource={RelativeSource self}}"/>
                                    <Setter TargetName="borderLine" Property="Opacity" Value="0"/>
                                </Trigger>

                                <Trigger SourceName="GridDeleteBtn" Property="IsMouseOver" Value="true">
                                    <Setter TargetName="pathIcon2" Property="Fill" Value="{StaticResource SK_Red}"/>
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard >
                                                <DoubleAnimation Storyboard.TargetName="pathIcon2" Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" From="1" To="1.2" Duration="0:0:0.2" />
                                                <DoubleAnimation Storyboard.TargetName="pathIcon2" Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" From="1" To="1.2" Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard >
                                                <DoubleAnimation Storyboard.TargetName="pathIcon2" Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"  To="1" Duration="0:0:0.2" />
                                                <DoubleAnimation Storyboard.TargetName="pathIcon2" Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"  To="1" Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>

                                <Trigger SourceName="GridBtn" Property="IsMouseOver" Value="true">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard >
                                                <DoubleAnimation Storyboard.TargetName="pathIcon" Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" From="1" To="1.2" Duration="0:0:0.2" />
                                                <DoubleAnimation Storyboard.TargetName="pathIcon" Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" From="1" To="1.2" Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard >
                                                <DoubleAnimation Storyboard.TargetName="pathIcon" Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"  To="1" Duration="0:0:0.2" />
                                                <DoubleAnimation Storyboard.TargetName="pathIcon" Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"  To="1" Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid  x:Name="MainGrid" Background="White" >
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Border Background="Transparent" PreviewMouseDown="System_MouseDown" PreviewMouseMove="System_MouseMove" Cursor="SizeAll">
                <!--머리글-->
                <TextBlock  x:Name="textblockHead" IsHitTestVisible="False" FontFamily="{StaticResource RegularFont}" Margin="10,0,0,0" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#FFBFBFBF"/>
            </Border>

            <DockPanel HorizontalAlignment="Right" Grid.Column="1">
                <uidictionary:SK_ButtonControl Grid.Column="3" 
                                               Style="{StaticResource SK_IconButtonStyle_Box}"
                                               Background="#FFBFBFBF"
                                               MouseOverColor="#FFE5E5E5"
                                               IconMouseOverColor="{StaticResource SK_LBlack}"
                                               PathData="M416 256c0 17.7-14.3 32-32 32L32 288c-17.7 0-32-14.3-32-32s14.3-32 32-32l352 0c17.7 0 32 14.3 32 32z"
                                               ImageMargin="9"
                                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               Height="20" Width="60" 
                                               Click="Mimimize_Click"
                                               ToolTip="{ex:Translate 최소화}"/>
                <uidictionary:SK_ButtonControl Grid.Column="3" x:Name="btnMax" 
                                               Style="{StaticResource SK_IconButtonStyle_Box}"
                                               Background="#FFBFBFBF"
                                               MouseOverColor="{StaticResource SK_Red}"
                                               IconMouseOverColor="White"
                                               PathData="M432 48H208c-17.7 0-32 14.3-32 32V96H128V80c0-44.2 35.8-80 80-80H432c44.2 0 80 35.8 80 80V304c0 44.2-35.8 80-80 80H416V336h16c17.7 0 32-14.3 32-32V80c0-17.7-14.3-32-32-32zM48 448c0 8.8 7.2 16 16 16H320c8.8 0 16-7.2 16-16V256H48V448zM64 128H320c35.3 0 64 28.7 64 64V448c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V192c0-35.3 28.7-64 64-64z"
                                               ImageMargin="3"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Height="20" Width="60" 
                                               Click="Maximize_Click"
                                               ToolTip="{ex:Translate 이전 크기로 복원}"/>
            </DockPanel>
        </Grid>

        <!--프레임-->
        <Border Grid.Row="2" Tag="borderFrame" MouseEnter="MenuButton_MouseEnter" Background="Transparent" Grid.RowSpan="1">
            <Frame x:Name="frame_content" Background="White" NavigationUIVisibility="Hidden"  Margin="3,3"/>
        </Border>

        <Popup x:Name="popupMain"   AllowsTransparency="True" Grid.RowSpan="6" Grid.ColumnSpan="5" HorizontalOffset="10" VerticalOffset="10">
            <Grid>
                <LoginUser:LoginUserStatePopupView x:Name="popupMain_UserControl"/>
                <Border Background="Transparent" Tag="EXIT" Width="15" Height="15" HorizontalAlignment="Right" Margin="0,15,15,0" VerticalAlignment="Top" PreviewMouseDown="BorderButton_PreviewMouseDown">
                    <Path  IsHitTestVisible="False" Style="{StaticResource PathColorChange}" Stretch="Fill"  Data="M310.6 361.4c12.5 12.5 12.5 32.75 0 45.25C304.4 412.9 296.2 416 288 416s-16.38-3.125-22.62-9.375L160 301.3L54.63 406.6C48.38 412.9 40.19 416 32 416S15.63 412.9 9.375 406.6c-12.5-12.5-12.5-32.75 0-45.25l105.4-105.4L9.375 150.6c-12.5-12.5-12.5-32.75 0-45.25s32.75-12.5 45.25 0L160 210.8l105.4-105.4c12.5-12.5 32.75-12.5 45.25 0s12.5 32.75 0 45.25l-105.4 105.4L310.6 361.4z" />
                </Border>
            </Grid>
        </Popup>

        <!--상단 그리드-->
        <Grid Background="{x:Null}" Grid.Row="1" Grid.ColumnSpan="2" Panel.ZIndex="10" Grid.RowSpan="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--상단그리드 경계선-->
            <Border Grid.ColumnSpan="2" IsHitTestVisible="False" Grid.Row="1" Height="5" VerticalAlignment="Top">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFBFBFBF"/>
                        <GradientStop Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <!--기능-->
            <Grid Grid.ColumnSpan="1" Grid.Column="1" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!--DB, Core 접속상태-->
                <Border Width="65" VerticalAlignment="Top" HorizontalAlignment="Left" BorderThickness="1,0,0,0" BorderBrush="#FFBFBFBF" Height="60">
                    <StackPanel VerticalAlignment="Center">
                        <DockPanel Margin="5,5,5,0" VerticalAlignment="Bottom">
                            <TextBlock  x:Name="textblock_DBConectivity" Tag="0" Text="DB" Grid.Row="0" FontSize="{Binding UIFontSize_Small}" FontFamily="{StaticResource BoldFont}" Foreground="{StaticResource SK_LBlack}" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <Path Data="M256 512c141.4 0 256-114.6 256-256S397.4 0 256 0S0 114.6 0 256S114.6 512 256 512z"
                          Stretch="Uniform" Height="10" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right">
                                <Path.Style>
                                    <Style TargetType="Path">
                                        <Setter Property="Fill" Value="{StaticResource SK_Red}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Tag, ElementName=textblock_DBConectivity}" Value="1">
                                                <Setter Property="Fill" Value="{StaticResource SK_Green}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Path.Style>
                            </Path>
                        </DockPanel>
                        <Separator Height="1" Background="{x:Null}"/>
                        <DockPanel Margin="5,0,5,0" VerticalAlignment="Top">
                            <TextBlock x:Name="textblock_CoreConectivity" Tag="0" Text="CORE" Grid.Row="0" FontSize="{Binding UIFontSize_Small}" FontFamily="{StaticResource BoldFont}" Foreground="{StaticResource SK_LBlack}" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <Path Data="M256 512c141.4 0 256-114.6 256-256S397.4 0 256 0S0 114.6 0 256S114.6 512 256 512z"
                          Stretch="Uniform" Height="10" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right">
                                <Path.Style>
                                    <Style TargetType="Path">
                                        <Setter Property="Fill" Value="{StaticResource SK_Red}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Tag, ElementName=textblock_CoreConectivity}" Value="1">
                                                <Setter Property="Fill" Value="{StaticResource SK_Green}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Path.Style>
                            </Path>
                        </DockPanel>
                    </StackPanel>

                </Border>


                <!--중간메뉴-->
                <ScrollViewer Grid.RowSpan="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="65,0,0,0">
                    <Grid HorizontalAlignment="Center" Grid.RowSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!--상단 그리드 메뉴-->
                        <!--기준정보관리-->
                        <Border x:Name="MenuConfig_SubMenu" Background="{StaticResource SK_Red}" Margin="0" Opacity="1" VerticalAlignment="Top" Grid.Row="1">
                            <StackPanel VerticalAlignment="Top">
                                <Separator Height="10" Background="White" IsHitTestVisible="False" Margin="20,0,20,0"/>
                                <uidictionary:SK_ButtonControl Style="{StaticResource TextSubMenuStyle}" TagName = "AlarmManager"   Content="{ex:Translate Stocker Alarm 관리}"     FontSize="{Binding UIFontSize_Medium}" Height="32" Click="PageBtn_Click" MouseEnter="SK_ButtonControl_MouseEnter" MouseLeave="SK_ButtonControl_MouseLeave" Loaded="TextSubMenu_Loaded"/>
                                <uidictionary:SK_ButtonControl Style="{StaticResource TextSubMenuStyle}" TagName = "Config"         Content="{ex:Translate Stocker Config 관리}"    FontSize="{Binding UIFontSize_Medium}" Height="32" Click="PageBtn_Click" MouseEnter="SK_ButtonControl_MouseEnter" MouseLeave="SK_ButtonControl_MouseLeave" Loaded="TextSubMenu_Loaded"/>
                                <uidictionary:SK_ButtonControl Style="{StaticResource TextSubMenuStyle}" TagName = "MapViewer"      Content="{ex:Translate Map 관리}"               FontSize="{Binding UIFontSize_Medium}" Height="32" Click="PageBtn_Click" MouseEnter="SK_ButtonControl_MouseEnter" MouseLeave="SK_ButtonControl_MouseLeave" Loaded="TextSubMenu_Loaded" x:Name="skBtn_MapViewer"/>
                                <Separator Height="10" Background="Transparent" IsHitTestVisible="False"/>
                            </StackPanel>
                        </Border>
                        <uidictionary:SK_ButtonControl x:Name="Menu_Config" MaxWidth="350" Style="{StaticResource SK_TextButtonStyle2}" FontSize="{Binding UIFontSize_Large}" ToolTip="{ex:Translate 정보 관리 메뉴}"  Content="{ex:Translate 기준 정보 관리}" Background="White" Foreground="{StaticResource SK_LBlack}" Click="MenuButton_Click" TagName="Config"     Grid.Column="0" LostFocus="Menu_LostFocus" MinWidth="150" MouseOverColor="{StaticResource SK_Red}" BorderThickness="0"/>

