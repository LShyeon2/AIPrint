                <!--스톱퍼-->
                <Rectangle x:Name="UpperStopper" RadiusX="3" RadiusY="3" IsHitTestVisible="False" Fill="#FFB3BBC4" Height="6" Stroke="#FF495A69" Width="50"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0" StrokeThickness="1"/>
