<UserControl x:Class="BoxPrint.GUI.ucCustomToolTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BoxPrint.GUI"
             mc:Ignorable="d"
             FontFamily="{StaticResource ExtraBoldFont}">
    <Border Background="#FF29313B" Grid.ColumnSpan="3" CornerRadius="5">
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="txtName" Foreground="White" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextAlignment="Center" FontSize="15" Margin="0,5,0,5"/>
            <StackPanel Grid.Row="1">
                <Grid x:Name="grdValues"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
