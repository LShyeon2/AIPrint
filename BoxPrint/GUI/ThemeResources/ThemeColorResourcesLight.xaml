<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
                     xmlns:local="clr-namespace:BoxPrint.GUI.ThemeResources">

    <LinearGradientBrush x:Key="MainMenuBackground" EndPoint="0.5,1" StartPoint="0.5,0">
        <LinearGradientBrush.RelativeTransform>
            <TransformGroup>
                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                <SkewTransform CenterY="0.5" CenterX="0.5"/>
                <RotateTransform Angle="270" CenterY="0.5" CenterX="0.5"/>
                <TranslateTransform/>
            </TransformGroup>
        </LinearGradientBrush.RelativeTransform>
        <GradientStop Color="#FFAAD9DE" Offset="0.99"/>
        <GradientStop Color="#FF495A69" Offset="0.99"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="MainMenuForeground" Color="#FF495A69"/>

    <LinearGradientBrush x:Key="MainMenuHeaderBackground" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="White"/>
        <GradientStop Color="White" Offset="0.08"/>
        <GradientStop Color="White" Offset="0.93"/>
        <GradientStop Color="White" Offset="0.967"/>
    </LinearGradientBrush>



