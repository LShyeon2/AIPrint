                                <Setter Property="Border.BorderThickness" TargetName="buttonBorder" Value="5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--초기화 버튼-->
